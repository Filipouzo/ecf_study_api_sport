{% extends 'base.html.twig' %}

{% block title %}GlobalOption index{% endblock %}

{% block body %}
    <h1>GlobalOption index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Activated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for global_option in global_options %}
            <tr>
                <td>{{ global_option.id }}</td>
                <td>{{ global_option.name }}</td>
                <td>{{ global_option.activated ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_global_option_show', {'id': global_option.id}) }}">show</a>
                    <a href="{{ path('app_global_option_edit', {'id': global_option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_global_option_new') }}">Create new</a>
{% endblock %}
